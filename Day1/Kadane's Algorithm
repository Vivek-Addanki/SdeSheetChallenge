#include <bits/stdc++.h> 
long long maxSubarraySum(int arr[], int n)
{
    long long sum=0;
    long long maxi=INT_MIN;
    bool flag=0;
    for(int i=0;i<n;i++)
    {  
        if(arr[i]>0) flag=1;
        sum+=arr[i];
        maxi=max(sum,maxi);
        if(sum<0) sum=0;  
    }
    return flag==1?maxi:0;
}
